@page "{id:int}"

@model FoodAndStyleOrderPlanning.Pages.Restaurants.DeleteModel
@{
    ViewData["Title"] = "Delete";
}

    <h2>Delete!</h2>
    <div class="alert alert-danger">
        Are you sure you want to delete @Model.Restaurant.Name?
    </div>
    <form method="post">
        <button type="submit" class="btn btn-danger">Yes!</button>
        <a asp-page="List" class="btn btn-outline-dark">Cancel</a>
    </form>
